<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>TemplateWebApiNET</PackageId>
        <PackageVersion>0.0.1-Alpha</PackageVersion>
        <Title>TemplateWebApiNET</Title>
        <Authors>gdetra</Authors>
        <Description>A structured template for api rest project contains a lot of addition (DTOs, DAL, BusinessLogic libraries etc..).</Description>
        <Copyright>gdetra Â© 2021</Copyright>
        <RepositoryType>git</RepositoryType>
        <PackageTags>c#;asp.net;core;template;web</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AutoWrapper.Core" Version="4.5.0" />
        <PackageReference Include="Scrutor" Version="3.3.0" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="5.6.3" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Properties\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
